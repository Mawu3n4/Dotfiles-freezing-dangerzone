# Font
use_xft yes
xftfont PF Tempesta Seven:pixelsize=8

# Text alpha when using Xft
#xftalpha 0.10

background        no
out_to_console    yes
out_to_x          no
update_interval   1
total_run_times   0
short_units       yes
pad_percents      3
override_utf8_locale yes

color0 #ea5757 122002
color1 #ea5757
color2 #d7d7d7
color3 #239669
color4 #a0043c

TEXT
,[\
  {"full_text": " ◬ [$swapbar] ", "color":"\#d7d7d7"},\
  {"full_text": " ⧕ [$membar] ", "color":"\#ea5757"},\
  {"full_text": " ◯ [$cpubar] ", "color":"\#d7d7d7"},\
  {"full_text": " [${exec echo "(" $(date +%s) - $(date --utc --date "2015-06-01" +%s) ")/ (3600 * 24)" | bc}] ","color": "\#66a094"},\
  {"full_text": " ♫ [${exec ~/.bin/sound}]","color":"\#ea5757"},\
  {"full_text": " ⇅ ${wireless_essid wlp3s0}: [${wireless_link_bar wlp3s0}] ","color":"\#ea5757"},\
  {"full_text": " ⧎ [${fs_free_perc /}] ", "color":"\#d7d7d7"},\
  {"full_text": " ⚡ [${battery_percent}%] ", "color":"\#239669"},\
  {"full_text": " ∑ [$processes] ","color":"\#ea5757"},\
  {"full_text": " [${time %d-%m} ","color": "\#239669"},\
  {"full_text": " ${time %I:%M}","color": "\#FFFFFF", "font": "bold"},\
  {"full_text": " GMT${exec date +%z | cut -c1-3}] ","color": "\#239669"},\
  {"full_text": " [${exec setxkbmap -query | grep -oE 'us|fr' | tr '[:lower:]' '[:upper:]'}] ","color": "\#66a094"}\
]
