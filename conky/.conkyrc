# Font
use_xft yes
xftfont PF Tempesta Seven:pixelsize=8

# Text alpha when using Xft
#xftalpha 0.10

background        no
out_to_console    yes
out_to_x          no
update_interval   1
total_run_times   0
short_units       yes
pad_percents      3
override_utf8_locale yes

color0 #122002
color1 #a0035a
color2 #e06940
color3 #e04a37
color4 #a0043c

TEXT
,[\
  {"full_text": " ${if_existing /sys/class/net/wlan0/operstate up} [w0 ${addr wlan0}]${endif} ", "color":"\#e06940"},\
  {"full_text": " ${if_existing /sys/class/net/eth0/operstate up} [e0 ${addr eth0}]${endif} ", "color":"\#e06940"},\
  {"full_text": " ♫ [${exec ~/.bin/sound}]","color":"\#a0035a"},\
  {"full_text": " ⧎ [${fs_free_perc /}] ", "color":"\#a0043c"},\
  {"full_text": " ⚡ [${battery_percent}%] ", "color":"\#e04a37"},\
  {"full_text": " ◬ [$swapbar] ", "color":"\#e06940"},\
  {"full_text": " ⧕ [$membar] ", "color":"\#a0035a"},\
  {"full_text": " ◯ [$cpubar] ", "color":"\#e06940"},\
  {"full_text": " ∑ [$processes] ","color":"\#a0035a"},\
  {"full_text": " [${time %d-%m} ","color": "\#e04a37"},\
  {"full_text": " ${time %I:%M}","color": "\#FFFFFF", "font": "bold"},\
  {"full_text": " GMT${exec date +%z | cut -c1-3}] ","color": "\#e04a37"},\
  {"full_text": " [${exec setxkbmap -query | grep -oE 'us|fr' | tr '[:lower:]' '[:upper:]'}] ","color": "\#e04a37"}\
]
